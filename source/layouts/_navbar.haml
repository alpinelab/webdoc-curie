#menu="MENU"
%nav.navbar.navbar-default.hide{role: "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", :'data-toggle' => "collapse", :'data-target' => "#curie-navbar"}
        %span.sr-only= I18n.t('navbar.toogle-navigation')
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#"}= "^"
    #curie-navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{href: "#"}= I18n.t('navbar.group')
        %li
          %a{href: "#"}= I18n.t('navbar.mastectomy')
        %li
          %a{href: "#"}= I18n.t('navbar.reconstruction')
        %li
          %a{href: "#"}= I18n.t('navbar.alternatives')
      %form.navbar-form.navbar-right{action: "/search"}
        %label.sr-only{for: "tipue_search_input"}= "Rechercher"
        %input#tipue_search_input{name: 'q', autocomplete: "off", required: true}
        %button{class: 'btn btn-primary btn-lg'}
          = image_tag('search.png', alt: I18n.t('common.search'))
      #tipue_drop_content

- content_for :javascripts do
  :coffeescript
    $(document).ready ->
      $("#menu").click ->
        $(this).toggleClass('hide')
        $("nav.navbar.navbar-default").toggleClass('hide')
      $("nav.navbar.navbar-default a.navbar-brand").click ->
        $("nav.navbar.navbar-default").toggleClass('hide')
        $("#menu").toggleClass('hide')
