#rotatescroll
  = partial 'layouts/compass'
  .viewport
    %ul.compass-inner
      - %w{infosein mastectomy surgical nonsurgical}.each do |section|
        %li{class: section}
          .slide-container
            .pretitle= I18n.t("compass.inner.#{section}.pretitle")
            .title= I18n.t("compass.inner.#{section}.title")
            = image_tag("pictograms/#{section}-white.png", class: 'picto')
            %a.btn.btn-default{href: "/pages/#{section}"}= I18n.t("common.enter")
  .thumb
    .arrow
    #tutorial-circle.hide
      %span= I18n.t('tutorial.arrow')
  .dot

- content_for :javascripts do
  :coffeescript
    $(document).ready ->
      $("#rotatescroll").tinycircleslider
        dotsSnap: true
        radius: 270
