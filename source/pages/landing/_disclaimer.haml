#modal-intro.modal.fade
  .modal-dialog
    .modal-content{class: "color-orange"}
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
          %span.sr-only= I18n.t("common.close")
        .modal-title
          %h2= I18n.t("common.doc-title1")
          %h2= I18n.t("common.doc-title2")
          = image_tag "pictograms/cicatrice-grey.png"
      .modal-body
        %p= I18n.t("disclaimer.message")
      .modal-footer#disclaimer-modal-footer
        %p
          %a{href: "/"}= I18n.t("disclaimer.discover")
        .divider
