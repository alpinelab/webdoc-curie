    $(document).ready ->
      $("#tipue_search_input").tipuedrop()
      eventType = (if Modernizr.touch then 'touchstart' else 'mousedown')
      $("#tutorial").on eventType, (event) ->
        $("#tutorial-circle").toggleClass("tutorial-mask hide")
