.container-fluid
  .row
    .col-sm-4.col-sm-offset-4
      = partial "layouts/circular_navigation"

- content_for :javascripts do
  :coffeescript
    $(document).ready ->
      $("#tipue_search_input").tipuedrop()
      $ ->
        BV = new $.BigVideo(useFlashForFirefox: false)
        BV.init()
        if Modernizr.touch
          BV.show "http://video-js.zencoder.com/oceans-clip.png"
        else
          BV.show [
            {
              type: "video/mp4"
              src: "http://video-js.zencoder.com/oceans-clip.mp4"
            }
            {
              type: "video/webm"
              src: "http://video-js.zencoder.com/oceans-clip.webm"
            }
            {
              type: "video/ogg"
              src: "http://video-js.zencoder.com/oceans-clip.ogv"
            }
          ],
            ambient: true
            loop: true
        return
      return
